<?xml version="1.0" encoding="UTF-8"?>
<phpunit backupGlobals="false"
         bootstrap="./loader.php"
         colors="true"
         processIsolation="false"
         stopOnFailure="false"
         >
    <testsuites>
        <testsuite name="PHP Unit Test Suite">
            <directory suffix=".php">./src</directory>
        </testsuite>
    </testsuites>
    <!-- PHPUnit 10.x 配置这个-->
    <source>
        <include>
            <directory>../src</directory>
        </include>
    </source>
</phpunit>
